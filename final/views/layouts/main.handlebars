    <script type="text/javascript">
    $(document).ready(function(){
        // Initialize Slick Slider with horizontal sliding
        $('.featured-products-slider').slick({
            infinite: true,           // Loop through products
            slidesToShow: 4,          // Show 4 products at a time
            slidesToScroll: 1,        // Scroll 1 product at a time
            autoplay: true,           // Auto-slide the products
            autoplaySpeed: 3000,      // Speed of auto-slide (3 seconds)
            dots: true,               // Show navigation dots
            arrows: true,             // Show previous/next arrows
            responsive: [
                {
                    breakpoint: 1024,  // For tablet screens, show 3 items
                    settings: {
                        slidesToShow: 3,
                    }
                },
                {
                    breakpoint: 600,   // For mobile screens, show 1 item
                    settings: {
                        slidesToShow: 1,
                    }
                }
            ]
        });
    });
</script>

